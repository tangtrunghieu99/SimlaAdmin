@model PagedList.IPagedList<SimlaAdmin.Models.Account>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản Lý Người Dùng";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="ibox">

    <div class="ibox-head">
        <div class="ibox-title">Danh sách tài khoản</div>
    </div>

    <div class="ibox-body">
        @using (Html.BeginForm("Index", "User", FormMethod.Get))
        {
            @*<div class="rel">
                    <span class="search-icon"><i class="ti-search"></i></span>
                    <input class="form-control" placeholder="Search here...">
                </div>*@

            <div class="row form-group ">
                <div class="col-lg-12">
                    <div class="col-md-4">
                        <input type="text" name="Tìm kiếm" class="form-control" placeholder="Tìm kiếm nhân viên" />
                        <br />
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-success">Tìm kiếm</button>
                        @*<button  class="btn btn-warning" href="/Admin/User/Tao">Thêm mới</button>*@
                        <a type="button" class="btn btn-success" href="/User/Tao">Thêm mới</a>
                    </div>
                </div>
            </div>

        }

        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Tên đăng nhập</th>
                    <th>Tên</th>
                    <th>Giới tính</th>
                    <th>Điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Chỉnh sửa</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.username</td>
                        <td>@item.name</td>
                        <td>@item.gender</td>
                        <td>@item.phone</td>
                        <td>@item.address</td>
                        <td>
                            <a href="/User/Edit/@item.id">Sửa</a> |
                            <a href="/User/Delete?id=@item.id">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>



