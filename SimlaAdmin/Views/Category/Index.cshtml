@model PagedList.IPagedList<SimlaAdmin.Models.Category>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="ibox">

    <div class="ibox-head">
        <div class="ibox-title">Danh sách sản phẩm </div>
    </div>

    <div class="ibox-body">
        @using (Html.BeginForm("Index", "Category", FormMethod.Get))
        {

            <div class="row form-group ">
                <div class="col-lg-12">
                    <div class="col-md-4">
                        <input type="text" name="Tìm kiếm" class="form-control" placeholder="Nhập sản phẩm" />
                        <br />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                      
                    </div>
                </div>
            </div>

        }

        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên danh mục</th>


                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.categoryName</td>

                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>



