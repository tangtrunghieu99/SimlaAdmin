@model PagedList.IPagedList<SimlaAdmin.Models.Food>
@using PagedList.Mvc;
@{
    ViewBag.Title = "DSFood";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">Danh sách Figure</div>
    </div>
    <div class="ibox-body">
        @using (Html.BeginForm("DSFood", "Food", FormMethod.Get))
        {

            <div class="row form-group ">
                <div class="col-lg-12">
                    <div class="col-md-4">
                        <input type="text" name="Tìm kiếm" class="form-control" placeholder="Tìm kiếm ..." />
                        <br />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        <a type="button" class="btn btn-success" href="/Food/Food">Thêm mới</a>
                    </div>
                </div>
            </div>

        }
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Mô tả</th>
                    <th>Giá</th>
                    <th>Ảnh</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.name</td>
                        <td>@item.detail</td>
                        <td>@item.price</td>
                        <td><img src="@item.imgUrl", width="300px" height="200px" /></td>
                        <td>
                            <a href="/Food/Edit/@item.id">Sửa</a> 
                            <a href="/Food/Delete/@item.id">Xóa</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("DSFood", new { page }))
    </div>
</div>
